rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /bebidas/{document=**} {
      allow read: if true;
    }
    match /pedidos/{document=**} {
      // Permite leer, crear, actualizar y borrar en la colecci贸n de pedidos.
      allow read, write: if true;
    }
    match /ordenes_archivadas/{document=**} {
      // Permite leer, crear, actualizar y borrar en la colecci贸n de archivadas.
      // Esto es crucial para que la transacci贸n de finalizaci贸n de orden funcione.
      allow read, write: if true;
    }
  }
}
